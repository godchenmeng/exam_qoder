<UserControl x:Class="ExamSystem.UI.Views.QuestionBankView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧题库列表 -->
        <Border Grid.Column="0" 
                Style="{StaticResource CardBorder}"
                Margin="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="题库列表"
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightMedium}"
                          Margin="0,0,0,15"/>

                <Button Grid.Row="1"
                       Content="新建题库"
                       Style="{StaticResource PrimaryButton}"
                       HorizontalAlignment="Stretch"
                       Margin="0,0,0,15">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Plus" 
                                                   Width="20" 
                                                   Height="20"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="新建题库" 
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <ListBox Grid.Row="2"
                        ItemsSource="{Binding QuestionBanks}"
                        SelectedItem="{Binding SelectedBank}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" 
                                         FontWeight="Medium"
                                         FontSize="14"/>
                                <TextBlock Text="{Binding Description}" 
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         TextWrapping="Wrap"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- 右侧题目列表 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Grid.Row="0"
                      Text="{Binding SelectedBank.Name, StringFormat='{}{0} - 题目管理'}"
                      FontSize="{StaticResource FontSizeXLarge}"
                      FontWeight="{StaticResource FontWeightBold}"
                      Margin="0,0,0,20"/>

            <!-- 工具栏 -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardBorder}"
                    Padding="15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           Content="新增题目"
                           Style="{StaticResource PrimaryButton}"
                           Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" 
                                                       Width="20" 
                                                       Height="20"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="新增题目" 
                                          Margin="8,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Grid.Column="1"
                           Content="导入"
                           Style="{StaticResource SecondaryButton}"
                           Margin="0,0,10,0"/>

                    <Button Grid.Column="2"
                           Content="导出"
                           Style="{StaticResource SecondaryButton}"
                           Margin="0,0,20,0"/>

                    <ComboBox Grid.Column="4"
                             Width="120"
                             materialDesign:HintAssist.Hint="题型筛选"
                             Margin="0,0,10,0"
                             SelectedItem="{Binding QuestionTypeFilter}"/>

                    <ComboBox Grid.Column="5"
                             Width="120"
                             materialDesign:HintAssist.Hint="难度筛选"
                             SelectedItem="{Binding DifficultyFilter}"/>
                </Grid>
            </Border>

            <!-- 题目列表 -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}">
                <DataGrid ItemsSource="{Binding Questions}"
                         SelectedItem="{Binding SelectedQuestion}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="题目内容" 
                                          Binding="{Binding Content}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="题型" 
                                          Binding="{Binding Type}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="难度" 
                                          Binding="{Binding Difficulty}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="分值" 
                                          Binding="{Binding Points}" 
                                          Width="60"/>
                        <DataGridTemplateColumn Header="操作" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="编辑"
                                               Style="{StaticResource MaterialDesignFlatButton}"
                                               Margin="5,0"/>
                                        <Button Content="删除"
                                               Style="{StaticResource MaterialDesignFlatButton}"
                                               Foreground="{StaticResource ErrorBrush}"
                                               Command="{Binding DataContext.DeleteQuestionCommand, 
                                                       RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               Margin="5,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
