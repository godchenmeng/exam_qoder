<UserControl x:Class="ExamSystem.UI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 页面标题 -->
            <TextBlock Grid.Row="0"
                      Text="系统概览"
                      FontSize="{StaticResource FontSizeXLarge}"
                      FontWeight="{StaticResource FontWeightBold}"
                      Margin="0,0,0,20"/>

            <!-- 统计卡片 -->
            <UniformGrid Grid.Row="1" 
                        Rows="1" 
                        Columns="4" 
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch">
                
                <!-- 用户数统计 -->
                <Border Style="{StaticResource StatisticCard}" Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountMultiple" 
                                                   Width="40" 
                                                   Height="40"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="用户总数"
                                         FontSize="{StaticResource FontSizeSmall}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding TotalUsers}"
                                         FontSize="{StaticResource FontSizeXXLarge}"
                                         FontWeight="{StaticResource FontWeightBold}"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 题库数统计 -->
                <Border Style="{StaticResource StatisticCard}" Margin="5,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="BookOpenPageVariant" 
                                                   Width="40" 
                                                   Height="40"
                                                   Foreground="{StaticResource SuccessBrush}"/>
                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="题库总数"
                                         FontSize="{StaticResource FontSizeSmall}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding TotalQuestionBanks}"
                                         FontSize="{StaticResource FontSizeXXLarge}"
                                         FontWeight="{StaticResource FontWeightBold}"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 试卷数统计 -->
                <Border Style="{StaticResource StatisticCard}" Margin="5,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" 
                                                   Width="40" 
                                                   Height="40"
                                                   Foreground="{StaticResource WarningBrush}"/>
                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="试卷总数"
                                         FontSize="{StaticResource FontSizeSmall}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding TotalExamPapers}"
                                         FontSize="{StaticResource FontSizeXXLarge}"
                                         FontWeight="{StaticResource FontWeightBold}"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 考试数统计 -->
                <Border Style="{StaticResource StatisticCard}" Margin="10,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ClipboardCheck" 
                                                   Width="40" 
                                                   Height="40"
                                                   Foreground="{StaticResource InfoBrush}"/>
                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="考试总数"
                                         FontSize="{StaticResource FontSizeSmall}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding TotalExams}"
                                         FontSize="{StaticResource FontSizeXXLarge}"
                                         FontWeight="{StaticResource FontWeightBold}"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- 最近活动 -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="欢迎使用在线考试系统"
                             FontSize="{StaticResource FontSizeLarge}"
                             FontWeight="{StaticResource FontWeightMedium}"
                             Margin="0,0,0,10"/>
                    <TextBlock Text="请从左侧菜单选择功能模块开始操作。"
                             FontSize="{StaticResource FontSizeMedium}"
                             Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
