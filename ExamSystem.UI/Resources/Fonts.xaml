<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 字体大小 -->
    <System:Double x:Key="FontSizeXSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">10</System:Double>
    <System:Double x:Key="FontSizeSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">12</System:Double>
    <System:Double x:Key="FontSizeMedium" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
    <System:Double x:Key="FontSizeLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
    <System:Double x:Key="FontSizeXLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">20</System:Double>
    <System:Double x:Key="FontSizeXXLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">24</System:Double>
    
    <!-- 字重 -->
    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
</ResourceDictionary>
